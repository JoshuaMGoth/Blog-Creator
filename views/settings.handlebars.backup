<div class="max-w-6xl mx-auto">
    <div class="card p-8">
        <h1 class="text-3xl font-bold text-gray-800 dark:text-white mb-8">
            <i class="fas fa-cog mr-3"></i>Settings
        </h1>
        
        <form action="/settings" method="POST" class="space-y-8">
            <!-- API Settings -->
            <div class="border-b border-gray-200 dark:border-gray-700 pb-8">
                <h2 class="text-2xl font-semibold mb-6 text-gray-700 dark:text-gray-300">
                    <i class="fas fa-key mr-2"></i>API Configuration
                </h2>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                            DeepSeek API Key
                        </label>
                        <input type="password" name="deepseekApiKey" value="{{config.deepseekApiKey}}"
                               class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent dark:bg-gray-700 dark:text-white"
                               placeholder="Enter your DeepSeek API key">
                        <p class="mt-2 text-sm text-gray-500 dark:text-gray-400">
                            Required for blog content generation
                        </p>
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                            Image AI API Key
                        </label>
                        <input type="password" name="imageAiApiKey" value="{{config.imageAiApiKey}}"
                               class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent dark:bg-gray-700 dark:text-white"
                               placeholder="Enter your Image AI API key">
                        <p class="mt-2 text-sm text-gray-500 dark:text-gray-400">
                            Optional - for AI image generation
                        </p>
                    </div>
                </div>
            </div>
            
            <!-- Hugo Settings -->
            <div class="border-b border-gray-200 dark:border-gray-700 pb-8">
                <h2 class="text-2xl font-semibold mb-6 text-gray-700 dark:text-gray-300">
                    <i class="fas fa-folder mr-2"></i>Hugo Configuration
                </h2>
                
                <div>
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                        Hugo Project Path
                    </label>
                    <input type="text" name="hugoPath" value="{{config.hugoPath}}"
                           class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent dark:bg-gray-700 dark:text-white"
                           placeholder="/path/to/your/hugo/project">
                    <p class="mt-2 text-sm text-gray-500 dark:text-gray-400">
                        Absolute path to your Hugo project directory
                    </p>
                </div>
            </div>
            
            <!-- Front Matter Settings -->
            <div class="border-b border-gray-200 dark:border-gray-700 pb-8">
                <h2 class="text-2xl font-semibold mb-6 text-gray-700 dark:text-gray-300">
                    <i class="fas fa-code mr-2"></i>Front Matter Settings
                </h2>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                            Default Title
                        </label>
                        <input type="text" name="title" value="{{config.frontMatter.title}}"
                               class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent dark:bg-gray-700 dark:text-white">
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                            Default Draft Status
                        </label>
                        <select name="draft" 
                                class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent dark:bg-gray-700 dark:text-white">
                            <option value="true" {{#if config.frontMatter.draft}}selected{{/if}}>Draft</option>
                            <option value="false" {{#unless config.frontMatter.draft}}selected{{/unless}}>Published</option>
                        </select>
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                            Default Tags (comma-separated)
                        </label>
                        <input type="text" name="tags" value="{{config.frontMatter.tags}}"
                               class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent dark:bg-gray-700 dark:text-white"
                               placeholder="tag1, tag2, tag3">
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                            Default Categories (comma-separated)
                        </label>
                        <input type="text" name="categories" value="{{config.frontMatter.categories}}"
                               class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent dark:bg-gray-700 dark:text-white"
                               placeholder="category1, category2">
                    </div>
                </div>
            </div>
            
            <!-- SFTP Settings -->
            <div class="border-b border-gray-200 dark:border-gray-700 pb-8">
                <h2 class="text-2xl font-semibold mb-6 text-gray-700 dark:text-gray-300">
                    <i class="fas fa-server mr-2"></i>SFTP Server Configuration
                </h2>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                            Host
                        </label>
                        <input type="text" name="sftp[host]" value="{{config.sftp.host}}"
                               class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent dark:bg-gray-700 dark:text-white">
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                            Port
                        </label>
                        <input type="number" name="sftp[port]" value="{{config.sftp.port}}"
                               class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent dark:bg-gray-700 dark:text-white">
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                            Username
                        </label>
                        <input type="text" name="sftp[username]" value="{{config.sftp.username}}"
                               class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent dark:bg-gray-700 dark:text-white">
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                            Password
                        </label>
                        <input type="password" name="sftp[password]" value="{{config.sftp.password}}"
                               class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent dark:bg-gray-700 dark:text-white">
                    </div>
                    
                    <div class="md:col-span-2">
                        <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                            Remote Path
                        </label>
                        <input type="text" name="sftp[remotePath]" value="{{config.sftp.remotePath}}"
                               class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent dark:bg-gray-700 dark:text-white"
                               placeholder="/var/www/html">
                    </div>
                </div>
            </div>
            
            <!-- Theme Settings -->
            <div class="pb-8">
                <h2 class="text-2xl font-semibold mb-6 text-gray-700 dark:text-gray-300">
                    <i class="fas fa-palette mr-2"></i>Theme Settings
                </h2>
                
                <div>
                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                        Default Theme
                    </label>
                    <select name="theme" 
                            class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent dark:bg-gray-700 dark:text-white">
                        <option value="light" {{#eq config.theme "light"}}selected{{/eq}}>Light Mode</option>
                        <option value="dark" {{#eq config.theme "dark"}}selected{{/eq}}>Dark Mode</option>
                        <option value="auto" {{#eq config.theme "auto"}}selected{{/eq}}>Auto (System)</option>
                    </select>
                </div>
            </div>
            
            <!-- Action Buttons -->
            <div class="flex justify-end space-x-4 pt-6 border-t border-gray-200 dark:border-gray-700">
                <button type="button" onclick="testSettings()"
                        class="px-6 py-3 border border-gray-300 dark:border-gray-600 rounded-lg font-medium hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
                    <i class="fas fa-vial mr-2"></i>Test Settings
                </button>
                
                <button type="submit"
                        class="px-6 py-3 bg-blue-600 text-white rounded-lg font-medium hover:bg-blue-700 transition-colors">
                    <i class="fas fa-save mr-2"></i>Save All Settings
                </button>
            </div>
        </form>
    </div>
</div>

<script>
    function testSettings() {
        fetch('/api/test', { method: 'POST' })
            .then(res => res.json())
            .then(data => {
                alert(data.message);
            });
    }
</script>
