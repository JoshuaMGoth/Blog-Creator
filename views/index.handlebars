        // Post corrected text as blog
        async function postCorrectedBlog() {
            const content = correctedTextContent;
            let title = selectedTitle || document.getElementById('customTitle').value.trim();
            const description = selectedDescription || '';
            
            if (!content) {
                showStatus('No corrected text to post. Please correct some text first.', 'error');
                return;
            }
            
            if (!title) {
                showStatus('Please enter or select a title for your blog', 'error');
                return;
            }
            
            showStatus('Posting blog...', 'info');
            
            try {
                const response = await fetch('/api/generate-blog-from-corrected', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        title: title,
                        description: description,
                        content: content,
                        blogType: correctedBlogType,
                        voice: correctedVoice,
                        imageFilename: uploadedImageFilename
                    })
                });
                
                const result = await response.json();
                
                if (result.success) {
                    showStatus('Blog posted successfully!', 'success');
                    
