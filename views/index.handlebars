                    const frontMatter = extractFrontMatter(result.content);
                    let frontMatterText = '';
                    for (const [key, value] of Object.entries(frontMatter)) {
                        frontMatterText += `${key}: ${value}\n`;
                    }
                    document.getElementById('frontmatterContent').textContent = frontMatterText || 'No front matter found';
                    
                    // Apply syntax highlighting
                    document.querySelectorAll('pre code').forEach((block) => {
                        hljs.highlightElement(block);
                    });
                    
                    // Show preview area
                    document.getElementById('previewArea').style.display = 'block';
                    document.getElementById('previewArea').scrollIntoView({ behavior: 'smooth' });
                    
                    // Ensure preview tab is active by default
                    document.querySelectorAll('.preview-tab').forEach(tab => tab.classList.remove('active'));
                    document.querySelectorAll('.preview-content').forEach(content => content.classList.remove('active'));
                    document.querySelector('.preview-tab[data-tab="preview"]').classList.add('active');
                    document.getElementById('previewContent').classList.add('active');
                } else {
                    showStatus('Error: ' + (result.message || 'Unknown error'), 'error');
                }
            } catch (error) {
                showStatus('Error: ' + error.message, 'error');
            }
        }
        
        // Spell/Grammar correction functions
        async function pasteText() {
            try {
                const text = await navigator.clipboard.readText();
                document.getElementById('correctionText').value = text;
                showStatus('Text pasted from clipboard!', 'success');
            } catch (error) {
                showStatus('Unable to paste from clipboard. Please paste manually.', 'error');
            }
        }
        
        async function correctText() {
            const text = document.getElementById('correctionText').value.trim();
            
            if (!text) {
                showStatus('Please enter some text to correct', 'error');
                return;
            }
            
            showStatus('Correcting spelling and grammar...', 'info');
            
            try {
                const response = await fetch('/api/correct-text', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ text: text })
                });
                
                const result = await response.json();
                
                if (result.success) {
                    showStatus('Text corrected successfully!', 'success');
                    
                    const correctionResult = document.getElementById('correctionResult');
                    correctionResult.innerHTML = marked.parse(result.corrected);
                    correctionResult.style.display = 'block';
                    
                    // Store corrected text
                    correctedTextContent = result.corrected;
                    
                    // Show blog creation section
                    document.getElementById('blogCreationSection').style.display = 'block';
                    document.getElementById('blogCreationSection').scrollIntoView({ behavior: 'smooth' });
                    
                    // Scroll to result
                    correctionResult.scrollIntoView({ behavior: 'smooth' });
                } else {
                    showStatus('Correction failed: ' + result.message, 'error');
                }
            } catch (error) {
                showStatus('Error: ' + error.message, 'error');
            }
        }
        
        // Generate SEO titles based on custom title
        async function generateSEOTitles() {
            const customTitle = document.getElementById('customTitle').value.trim();
            
            if (!customTitle) {
                showStatus('Please enter a title or use the corrected text', 'error');
                return;
            }
            
            showStatus('Generating SEO titles...', 'info');
            
            try {
                const response = await fetch('/api/generate-seo-titles', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ topic: customTitle })
                });
                
                const result = await response.json();
                
                if (result.success) {
                    seoTitles = result.titles;
                    showStatus('SEO titles generated! Select your title and description.', 'success');
                    displaySEOTitles();
                } else {
                    showStatus('SEO titles generation failed: ' + result.message, 'error');
                }
            } catch (error) {
                showStatus('Error: ' + error.message, 'error');
            }
        }
        
        // Display SEO titles as radio options
        function displaySEOTitles() {
            const seoTitlesContainer = document.getElementById('seoTitlesContainer');
            const titleOptions = document.getElementById('titleOptions');
            const descriptionOptions = document.getElementById('descriptionOptions');
            
            // Clear existing options
            titleOptions.innerHTML = '';
            descriptionOptions.innerHTML = '';
            
            // Create title options
            seoTitles.forEach((title, index) => {
                const label = document.createElement('label');
                label.className = 'radio-option';
                label.innerHTML = `
                    <input type="radio" name="selectedTitle" value="${title}" data-index="${index}">
                    <i class="fas fa-heading"></i>
                    <span style="font-size: 0.8rem;">${title}</span>
                `;
                titleOptions.appendChild(label);
            });
            
            // Create description options
            seoTitles.forEach((title, index) => {
                const label = document.createElement('label');
                label.className = 'radio-option';
                label.innerHTML = `
                    <input type="radio" name="selectedDescription" value="${title}" data-index="${index}">
                    <i class="fas fa-comment-alt"></i>
                    <span style="font-size: 0.8rem;">${title}</span>
                `;
                descriptionOptions.appendChild(label);
            });
            
            // Show the container
            seoTitlesContainer.style.display = 'block';
            
            // Add event listeners for title selection
            document.querySelectorAll('input[name="selectedTitle"]').forEach(radio => {
                radio.addEventListener('change', function() {
                    selectedTitle = this.value;
                    document.getElementById('customTitle').value = this.value;
                });
            });
            
            // Add event listeners for description selection
            document.querySelectorAll('input[name="selectedDescription"]').forEach(radio => {
                radio.addEventListener('change', function() {
                    selectedDescription = this.value;
                });
            });
            
            // Scroll to titles
            seoTitlesContainer.scrollIntoView({ behavior: 'smooth' });
        }
        
        // Format corrected text as blog
        async function formatCorrectedAsBlog() {
            const content = correctedTextContent;
            
            if (!content) {
                showStatus('No corrected text to format. Please correct some text first.', 'error');
                return;
            }
            
