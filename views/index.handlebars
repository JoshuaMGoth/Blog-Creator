        // Spell check the preview content
        async function spellCheckContent() {
            if (!currentRawContent) {
                showStatus('No content to spell check', 'error');
                return;
            }
            
            // Get the content portion (without front matter)
            const contentToCheck = extractContent(currentRawContent);
            
            showStatus('Running spell check...', 'info');
            
            try {
                const response = await fetch('/api/spell-check', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ text: contentToCheck })
                });
                
                const result = await response.json();
                
                if (result.success) {
                    showStatus('Spell check complete! Content updated.', 'success');
                    
                    // Reconstruct full markdown with corrected content
                    const frontMatterSection = currentRawContent.split('---').slice(0, 2).join('---') + '---\n\n';
                    currentRawContent = frontMatterSection + result.corrected;
                    currentMarkdownContent = result.corrected;
                    
                    // Update all views
                    document.getElementById('previewContent').innerHTML = marked.parse(currentMarkdownContent);
                    document.getElementById('rawContent').textContent = currentRawContent;
                    document.getElementById('editTextarea').value = currentRawContent;
                    
                    // Apply syntax highlighting
                    document.querySelectorAll('pre code').forEach((block) => {
                        hljs.highlightElement(block);
                    });
                } else {
                    showStatus('Spell check failed: ' + result.message, 'error');
                }
            } catch (error) {
                showStatus('Error: ' + error.message, 'error');
            }
        }
        
        // Save to blog folder
        async function saveToBlog() {
            if (!currentRawContent) {
                showStatus('No content to save', 'error');
                return;
            }
            
            if (!currentShortSlug) {
                // Generate short slug from title if not available
                const topic = document.getElementById('topic').value || mainFormSelectedTitle;
                if (topic) {
                    currentShortSlug = generateShortSlug(topic);
                } else {
                    showStatus('No title available for saving', 'error');
                    return;
                }
            }
            
            showStatus('Saving blog...', 'info');
            
            try {
                const response = await fetch('/api/save-blog', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        content: currentRawContent,
                        imageFilename: uploadedImageFilename,
                        shortSlug: currentShortSlug
                    })
                });
                
                const result = await response.json();
                
                if (result.success) {
                    showStatus('Blog saved successfully to: ' + result.path, 'success');
                } else {
                    showStatus('Save failed: ' + result.message, 'error');
                }
            } catch (error) {
                showStatus('Error: ' + error.message, 'error');
            }
        }
        
        // Update preview from edit textarea
        function updatePreviewFromEdit() {
            const editedContent = document.getElementById('editTextarea').value;
            
            if (!editedContent) {
                showStatus('No content in editor', 'error');
                return;
            }
            
            // Update the stored content
            currentRawContent = editedContent;
            currentMarkdownContent = extractContent(editedContent);
            
            // Update preview
            document.getElementById('previewContent').innerHTML = marked.parse(currentMarkdownContent);
            document.getElementById('rawContent').textContent = currentRawContent;
            
            // Update front matter display
            const frontMatter = extractFrontMatter(editedContent);
            let frontMatterText = '';
            for (const [key, value] of Object.entries(frontMatter)) {
                frontMatterText += `${key}: ${value}\n`;
            }
            document.getElementById('frontmatterContent').textContent = frontMatterText || 'No front matter found';
            
            // Apply syntax highlighting
            document.querySelectorAll('pre code').forEach((block) => {
                hljs.highlightElement(block);
            });
            
            showStatus('Preview updated with your changes!', 'success');
            
            // Switch to preview tab
            document.querySelectorAll('.preview-tab').forEach(tab => tab.classList.remove('active'));
            document.querySelectorAll('.preview-content').forEach(content => content.classList.remove('active'));
            document.querySelector('.preview-tab[data-tab="preview"]').classList.add('active');
            document.getElementById('previewContent').classList.add('active');
        }
        
        // Generate short slug from first 4 words
        function generateShortSlug(text) {
            const words = text.trim().split(/\s+/).slice(0, 4).join(' ');
            return words.toLowerCase()
                .replace(/[^\w\s-]/g, '')
                .replace(/\s+/g, '-')
                .replace(/--+/g, '-')
                .trim();
        }

        // Helper functions
        function showStatus(message, type = 'info') {
            const statusArea = document.getElementById('statusArea');
            const statusClass = type === 'error' ? 'status-error' : 
                              type === 'success' ? 'status-success' : 'status-info';
            
            statusArea.innerHTML = `
                <div class="status-message ${statusClass}">
                    <i class="fas fa-${type === 'success' ? 'check-circle' : type === 'error' ? 'exclamation-circle' : 'info-circle'}"></i>
                    ${message}
                </div>
            `;
            
            setTimeout(() => {
                statusArea.innerHTML = '';
            }, 5000);
        }
        
        function startHugoServer() {
            showStatus('Starting Hugo server...', 'info');
            fetch('/api/start-hugo-server', { method: 'POST' })
                .then(res => res.json())
                .then(data => {
                    showStatus(data.message, data.success ? 'success' : 'error');
                    if (data.success && data.url) {
                        setTimeout(() => {
                            if (confirm('Hugo server is running! Would you like to open it in your browser?')) {
                                window.open(data.url, '_blank');
                            }
                        }, 500);
                    }
                })
                .catch(error => {
                    showStatus('Server start error: ' + error.message, 'error');
                });
        }
        
        function previewHugo() {
            fetch('/api/preview-blog', { 
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ blogId: 'latest' })
            })
            .then(res => res.json())
            .then(data => {
                if (data.success && data.url) {
                    window.open(data.url, '_blank');
                }
                showStatus(data.message, data.success ? 'success' : 'error');
            })
            .catch(error => {
                showStatus('Preview error: ' + error.message, 'error');
            });
        }
        
        function uploadToServer() {
            if (confirm('This will rebuild and upload your Hugo site. Continue?')) {
                fetch('/api/upload-server', { method: 'POST' })
                    .then(res => res.json())
                    .then(data => {
                        showStatus(data.message, data.success ? 'success' : 'error');
                    })
                    .catch(error => {
                        showStatus('Upload error: ' + error.message, 'error');
                    });
            }
        }
        
        function copyToClipboard() {
            const content = currentRawContent;
            if (!content) {
                showStatus('No content to copy', 'error');
                return;
            }
            navigator.clipboard.writeText(content)
                .then(() => showStatus('Copied to clipboard!', 'success'))
                .catch(() => showStatus('Failed to copy', 'error'));
        }
        
        function downloadBlog() {
            const content = currentRawContent;
            if (!content) {
                showStatus('No content to download', 'error');
                return;
            }
            const topic = document.getElementById('topic').value || 'blog-post';
            const blob = new Blob([content], { type: 'text/markdown' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = generateSlug(topic) + '.md';
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            URL.revokeObjectURL(url);
            showStatus('Blog downloaded!', 'success');
        }
        
        function generateSlug(text) {
            return text.toLowerCase()
                .replace(/[^\w\s-]/g, '')
                .replace(/\s+/g, '-')
                .replace(/--+/g, '-')
                .trim();
        }
