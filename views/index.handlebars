                    currentRawContent = result.content;
                    currentMarkdownContent = extractContent(result.content);
                    
                    document.getElementById('previewContent').innerHTML = marked.parse(currentMarkdownContent);
                    document.getElementById('rawContent').textContent = currentRawContent;
                    
